<p id="notice"><%= notice %></p>

<h1 align="center">All Created Keys</h1>
<% if current_user.admin == true && current_user != @user %>
<table>
  <thead>
    <tr>
      <th>name</th>
      <th>value</th>
      <th colspan="3"></th>
    </tr>

    <tr>
      <td colspan="5"><%= link_to 'new key', new_keychain_path %></td>
    </tr>
  </thead>

  <tbody>
    <% @keychains.each do |keychain| %>
      <tr>
        <td><%= keychain.keyname %></td>
        <td><%= keychain.keyval %></td>
        <td><%= link_to 'show', keychain %></td>
        <td><%= link_to 'edit', edit_keychain_path(keychain) %></td>
        <td><%= link_to 'destroy', keychain, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% else %>
<p align="center" id="red"> <br>You do not have permission to view this page, please return to the previous page.<br><br><%= link_to "Home", root_path %></p>
<% end %>